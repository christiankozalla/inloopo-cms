---
const { title, description, icon, columnReverseClass = "" } = Astro.props;
---

<div class="wrapper-content">
  <section>
    <div class="benefits__wrapper">
      <div
        class={`
      benefits__container
      ${columnReverseClass}
      `}>
        <h2 class="benefits__heading">
          {title}
        </h2>
        <p class="benefits__text">
          {description}
        </p>
      </div>
      <div class="benefits__container">
        <div class="icon__circle">
          <img src={icon.src} width={icon.width} alt={icon.alt} />
        </div>
      </div>
    </div>
  </section>
</div>

<style>
  .benefits__wrapper {
    width: 100%;
    display: flex;
    margin-bottom: 60px;
    margin-top: 60px;
    flex-direction: row;
  }

  .benefits__container {
    padding: 25px;
    width: 50%;
  }

  .benefits__heading {
    font-size: 3.875rem;
    line-height: 1.2;
  }

  .benefits__text {
    font-size: 24px;
    width: 80%;
    line-height: 1.5;
  }

  .img-left {
    flex-flow: column-reverse;
  }

  @media only screen and (max-width: 759px) {
    .benefits__heading {
      font-size: 30px;
      margin-top: 24px;
    }

    .benefits__text {
      font-size: 18px;
      width: 100%;
    }

    .benefits__container {
      width: 100%;
    }

    .icon__circle {
      border: none;
    }

    img {
      width: 60%;
    }

    .benefits__wrapper {
      flex-direction: column-reverse;
      margin-bottom: 30px;
      margin-top: 30px;
    }
  }

  @media only screen and (max-width: 979px) {
    .benefits__container {
      width: 100%;
      padding: 0 24px;
    }
  }
</style>
