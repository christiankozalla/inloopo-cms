---
const { text, href, highlighted = false } = Astro.props;
---

<div class=`category-button__container ${highlighted ? "category-button__container--highlighted" : ""}`>
  <a href={href} class="category-button__link">
    <p class="category-button__text">{text}</p>
  </a>
</div>

<style>
  .category-button__container {
    background-color: var(--dark-background-color);
    border-radius: 2em;
  }

  .category-button__container--highlighted {
    outline: 2px solid #ff6b35;
    outline-offset: 2px;
  }

  .category-button__link {
    color: #fff;
    text-align: center;
    font-weight: bold;
  }

  .category-button__text {
    margin: 0;
    padding: 0.1em 0.6em;
    font-size: 1rem;
  }
</style>
