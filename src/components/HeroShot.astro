---
const { title, withIcon = false, description, button = "", backgroundImageClass = "", textColor = "" } = Astro.props;
---

<div
  class={`
main-teaser ${backgroundImageClass}
`}>
  <div class="wrapper">
    <h1
      class={`
    main-teaser__heading
    ${textColor}
    `}>
      {title}
    </h1>
    <p
      class={`
    main-teaser__text p--bigger
    ${textColor}
    `}>
      {description}<br /><br />
      {
        button && (
          <>
            <a href={button.href} target={button.target} class="button">
              {withIcon && <img class="button__img" src="/images/telegram.svg" width="20" alt="Telegram Icon" />}
              {button.text}
            </a>
            <br />
          </>
        )
      }
      <slot />
    </p>
  </div>
</div>

<style>
  .main-teaser {
    width: 100%;
    color: #fff;
    background-size: cover;
    background-repeat: no-repeat;
  }

  .main-teaser__heading,
  .main-teaser__text {
    margin-left: 10%;
  }

  .main-teaser__text {
    width: 40%;
    font-size: 1.5rem;
    line-height: 1.5;
  }

  .main-teaser__heading {
    margin-top: 160px;
    width: 45%;
  }

  .button {
    margin-bottom: 120px;
  }

  .background--dark {
    background-color: var(--dark-background-color);
    margin-top: -2em;
    padding: 0 0 4em 0;
  }

  .text--dark {
    color: var(--text-color);
  }

  @media only screen and (max-width: 759px) {
    .main-teaser__text {
      width: 80%;
    }

    .main-teaser__heading {
      width: 80%;
      margin-left: 10%;
      margin-right: 10%;
      margin-top: 20px;
    }
  }

  @media only screen and (min-width: 760px) and (max-width: 979px) {
    .main-teaser__text,
    .main-teaser__heading {
      width: 70%;
    }
  }
</style>
