---
interface Props {
  name: string;
  href: string;
  classes?: string;
}

const { name, href, classes } = Astro.props;
---

<li class={`navbar__li ${classes ? classes : ""}`}>
  <a class="navbar__link" href={href}>{name}</a>
</li>

<style>
  .navbar__link {
    text-decoration: none;
    color: var(--text-color);
  }

  .navbar__link:hover {
    color: #ff6b35;
  }

  .navbar__li {
    position: relative;
    font-size: 22px;
    font-size: 1.375rem;
    font-family: "Quattrocento", Arial, Helvetica, sans-serif;
    padding: 20px;
    margin-right: 40px;
  }

  .navbar__button {
    margin-right: 40px;
  }

  .navbar__button a {
    text-decoration: none;
    color: #fff;
    background: #ff6b35;
    padding: 10px 15px;
    font-size: 18px;
    font-size: 1.25rem;
    font-weight: bold;
    border: 1px solid #ff6b35;
  }

  .navbar__button a:hover {
    color: #ff6b35;
    background: #fff;
  }

  @media only screen and (min-width: 979px) and (max-width: 1150px) {
    .navbar__button {
      font-size: 1rem;
      margin-left: 20px;
      margin-top: 20px;
      margin-bottom: 20px;
    }
    .navbar__button a {
      display: block;
    }
  }
</style>
