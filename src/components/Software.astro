---
const { heading } = Astro.props;
---

<h2 class="tools__heading">{heading}</h2>
<div class="grid__tools">
  <img src="/images/Logo_Finviz.png" alt="Logo Finviz" />
  <img src="/images/Logo_InteractiveBrokers.jpg" alt="Logo Interactive Broker" />
  <img src="/images/Logo_SierraChart.png" alt="Logo Sierra Chart" />
  <a href="https://account.ninjatrader.com/register" target="_blank"
    ><img src="/images/NinjaTrader_NTE_BO_RGB.svg" alt="Logo Ninja Trader" /></a
  >
  <img src="/images/Logo_Tradesviz.png" alt="Logo Tradesviz" />
  <img src="/images/Logo_TradingView.png" alt="Logo TradingView" />
</div>

<style>
  .grid__tools {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: 70px 70px;
    justify-content: center;
    align-items: center;
    gap: 1em;
    margin: 0 24px;
  }

  .tools__heading {
    text-align: center;
    margin-top: 90px;
    margin-bottom: 36px;
  }

  .grid__tools img {
    position: relative;
    z-index: -1;
  }

  @media only screen and (min-width: 40em) {
    .tools__heading {
      margin-bottom: 0;
    }

    .grid__tools {
      gap: 2em;
      grid-template-columns: repeat(6, 1fr);
      grid-template-rows: 100%;
    }
  }
</style>
