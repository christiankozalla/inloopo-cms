---
//import layout
import MainLayout from "../../layouts/MainLayout.astro";
import Button from "../../components/Button.astro";

//import
import "../../styles/styles.css";
---

<MainLayout
  title="Kontakt"
  description="Kontaktier mich per E-Mail oder ruf mich an."
  lang="de"
  canonical="https://www.inloopo.com/de/kontakt/"
  opengraph={{
    url: "https://www.inloopo.com/de/kontakt/",
    image: "https://www.inloopo.com/images/kontakt-og.jpg",
    type: "website",
    description: "Du hast Fragen oder ein Feedback. Kontaktier mich.",
    locale: "de",
  }}>
  <!-- TEASER -->

  <!-- TEASER -->
  <div class="wrapper-content">
    <section>
      <div class="row">
        <div class="column half">
          <h1 class="box__main-heading">Was ist los?</h1>
          <p class="p--bigger">
            Du hast Fragen oder möchtest mir ein Feedback geben. Schreib mir eine E-Mail oder buche ein Zoom Meeting mit
            mir. Ich freue mich von dir zu hören.
          </p>
          <img class="main-teaser__icon" src="/images/long-arrow-down.svg" width="40" alt="Pfeil Icon" />
          <a href="mailto:info@inloopo.com" class="main-teaser__link link">info@inloopo.com</a>
          <div class="tidycal-embed" data-path="m797r83"></div>
        </div>
        <div class="column half">
          <div class="main-teaser__container">
            <img
              class="main-teaser__image"
              src="/images/image-teaser-kontakt.jpg"
              width="500"
              alt="Philipp Kozalla mit Daumen hoch"
            />
          </div>
        </div>
      </div>
    </section>
  </div>
  <script src="https://assets.tidycal.com/js/embed.js" async></script>
</MainLayout>
