import MainLayout from "../../layouts/MainLayout.astro";
import HeroShot from "../../components/HeroShot.astro";
import LeiChart from "../../components/LeiChart.astro";
import Button from "../../components/Button.astro";

//import
import "../../styles/styles.css";
---

<MainLayout
  title="Konjunkturzyklus als Tool"
  description="Dein Risiko war wieder zu hoch. Finde heraus, in welcher Phase des Konjunkturzyklus wir uns befinden und stimme dein Risiko darauf ab."
  opengraph={{
    description: "Verstehen den Konjunkturzyklus",
    locale: "de",
    type: "website",
    url: "https://www.inloopo.com/de/konjunkturzyklus/",
    image: "https://www.inloopo.com/images/konjunkturzyklus-og.svg",
  }}
  lang="de"
  canonical="https://www.inloopo.com/de/konjunkturzyklus/">
  <!-- TEASER -->
  <HeroShot
    title="Konjunkturzyklus"
    description="Der Konjunkturzyklus ist ein zentrales Element der Weltwirtschaft. Hier findest du die aktuelle Konjunkturzyklus Phase im Jahr 2023."
    backgroundImageClass="main-teaser__page-konjunkturzyklus"
    button={{
      text: "Erfahre mehr",
      href: "https://www.inloopo.com/de/finanzwissen/konjunkturzyklus-phasen/",
      target: "_blank",
    }}
  />
 
  <LeiChart />
  <div class="wrapper-content-blog">
    <p>Mit dem inloopo Konjunkturzyklus-Tool kannst du die aktuelle Konjunkturphase bestimmen. Dieses Wissen hilft dir, das Risiko deiner Investitionen zu steuern.</p>
